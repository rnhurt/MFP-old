<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8'>
    <title><%#= StaticData.site_name -%><%= controller.controller_name.humanize -%></title>

    <%= stylesheet_link_tag 'smoothness/jquery-ui-1.8.1.custom', 'main', :cache => '../system/all' -%>
    <%= javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.1.custom.min.js', 'application', :cache => '../system/all' -%>

    <%= @content_for_page_header -%>
  </head>

  <body>
    <div id='content' class='container'>
      <div id='header'>
        <% cache 'layout_header' do %>

        <% end %>
      </div>

      <div id='flash'><%= show_flash %></div>

      <div class='ui-tabs ui-widget ui-widget-content ui-corner-all'>
        <ul class='ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all'>
          <%= menu_builder(request.path_parameters['controller'].split('/')[0]) %>
        </ul>

        <div id="content" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
          <%= yield  %>
        </div>

      </div>


      <% cache 'layout_footer' do %>
        <div class='span-24 last' id='footer'>
          &copy; 2009 - <%= Time.now.year %>  <a href='http://kangaroobox.com'>KangarooBox</a>, LLC.  All rights reserved.
        </div>
      </div>

      <%= render :file => 'layouts/analytics.inc' if File.exist?(RAILS_ROOT + '/app/views/layouts/analytics.inc') -%>
    <% end %>
  </body>
</html>
