<% form_for @location do |f| %>
  <%= f.error_messages %>

  <%= f.label :street %>
  <%= f.text_field :street_number, :title => 'number', :class => 'focus', :size => 10 %>
  <%= f.text_field :street_name, :title => 'name' %>
  <%= f.text_field :block, :title => 'block', :size => 10 %>

  <div class="clearfix">&nbsp;</div>

  <%= f.label :city %>
  <%= f.text_field :city, :title => 'city', :size => 10 %>
  <%= f.collection_select :state, State.active, :code, :value, {:prompt => ''} %>
  <%= f.text_field :postal_code, :title => 'postal code', :size => 10 %>

<%#= f.label 'Description' %>
  <%#= f.text_area :description, :rows => 10, :cols => 80, :class => 'wysiwyg' %>

  <div class="clearfix">&nbsp;</div>

  <%= f.submit 'Save' %>
  <%= link_to 'Cancel', locations_path %>

<% end %>
